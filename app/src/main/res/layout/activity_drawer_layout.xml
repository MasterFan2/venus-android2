<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white_color"
    tools:context="com.chinajsbn.venus.ui.photography.DrawerLayoutActivity">

    <com.tool.widget.MasterTitleView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:titleText="DrawerLayout Test"
        app:titleTextColor="@android:color/white"
        app:rightButtonHide="true"
        />
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
        <TextView
            android:id="@+id/click_tv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Click"
            />
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
