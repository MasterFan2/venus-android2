<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_senior_head_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/item_senior_name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="张三"
                            android:textColor="@color/title_text_color"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/item_senior_works_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/gray_border_bg"
                            android:paddingBottom="5dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="5dp"
                            android:text="查看详情"
                            android:textColor="@color/title_text_color"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <!--<com.tool.widget.MyGridView-->
                    <!--android:id="@+id/item_senior_gridView"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:numColumns="2"-->
                    <!--/>-->

                    <LinearLayout
                        android:id="@+id/item_senior_content_top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <ImageView
                                android:id="@+id/item_senior_content_img1"
                                android:layout_width="0dp"
                                android:layout_height="170dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher" />

                            <ImageView
                                android:id="@+id/item_senior_content_img2"
                                android:layout_width="0dp"
                                android:layout_height="170dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/item_senior_content_bottom_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <ImageView
                                android:id="@+id/item_senior_content_img3"
                                android:layout_width="0dp"
                                android:layout_height="170dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher" />

                            <ImageView
                                android:id="@+id/item_senior_content_img4"
                                android:layout_width="0dp"
                                android:layout_height="170dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
