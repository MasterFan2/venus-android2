<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white_color"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.chinajsbn.venus.ui.login.ForgetActivity">

    <com.tool.widget.MasterTitleView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleBackgroundColor="@color/gray_900"
        app:titleTextColor="@android:color/white"
        app:titleText="找回密码"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:weightSum="2"
                >
                <com.tool.widget.common.EditText
                    android:id="@+id/forget_phone_edit"
                    style="@style/Material.Widget.EditText.Light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入手机号"
                    app:et_dividerPadding="8dp"
                    app:et_supportPadding="5dp"
                    android:textSize="18sp"
                    android:textCursorDrawable="@null"
                    app:et_dividerHeight="1dp"
                    android:textColorHint="@color/gray_500"
                    android:inputType="number"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColor="#FF000000"
                    app:et_dividerErrorColor="#FFFF0000"
                    app:et_dividerColor="@color/edit_text_line_state"
                    app:et_helper=""
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:et_inputId="@+id/textfield_et_helper_input"
                    app:et_labelTextColor="@drawable/color_label"
                    app:et_supportMode="helper"
                    app:et_supportTextErrorColor="#FFFF0000"
                    />
                <com.tool.widget.common.Button
                    android:id="@+id/forget_getCode_btn"
                    android:layout_width="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    style="@style/FlatButtonRippleStyle"
                    android:textColor="@color/gray_800"
                    android:background="#33999999"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <com.tool.widget.common.EditText
                android:id="@+id/forget_code_edit"
                style="@style/Material.Widget.EditText.Light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:et_supportPadding="5dp"
                app:et_dividerPadding="8dp"
                app:et_dividerHeight="1dp"
                android:textCursorDrawable="@null"
                android:hint="请输入短信验证码"
                android:textColorHint="@color/gray_500"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:maxLength="5"
                android:inputType="number"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="#FF000000"
                app:et_dividerErrorColor="#FFFF0000"
                app:et_helper=""
                app:et_inputId="@+id/textfield_et_helper_input"
                app:et_labelTextColor="@drawable/color_label"
                app:et_supportMode="helper"
                app:et_dividerColor="@color/edit_text_line_state"
                app:et_supportTextErrorColor="#FFFF0000"
                />
