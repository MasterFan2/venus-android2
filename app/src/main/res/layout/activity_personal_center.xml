<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white_color"
    android:orientation="vertical"
    tools:context="com.chinajsbn.venus.ui.personalcenter.PersonalCenterActivity">

    <com.tool.widget.MasterTitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:titleBackgroundColor="@color/gray_900"
        app:titleTextColor="@android:color/white"
        app:titleText="个人中心"
        />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/base_margin_padding"
        android:paddingRight="@dimen/base_margin_padding"
        android:divider="@null" />
</LinearLayout>
