<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            >

            <com.tool.widget.CircleImageView
                android:id="@+id/majordomo_head_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/majordomo_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:layout_marginTop="5dp"
                android:textColor="@color/title_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/majordomo_works_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_border_bg"
                android:paddingLeft="8dp"
                android:layout_marginTop="5dp"
                android:paddingRight="8dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/red_border_color"
                android:text="查看详情" />
        </LinearLayout>
    </LinearLayout> <!-- end 上面 -->

    <!-- *************************强大的分隔线**************************************** -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_senior_head_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/item_senior_name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/title_text_color"
                            android:text="张三" />

                        <TextView
                            android:id="@+id/item_senior_works_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/gray_border_bg"
                            android:textColor="@color/title_text_color"
                            android:paddingBottom="5dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="5dp"
                            android:visibility="gone"
                            android:text="查看详情" />
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/item_senior_content_top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/item_senior_content_img1"
                                android:layout_width="0dp"
                                android:layout_height="170dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher"
                                />
                            <ImageView
                                android:id="@+id/item_senior_content_img2"
                                android:layout_width="0dp"
                                android:layout_height="170dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:layout_marginLeft="5dp"
                                android:src="@mipmap/ic_launcher"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/item_senior_content_bottom_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/item_senior_content_img3"
                                android:layout_width="0dp"
                                android:layout_height="170dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@mipmap/ic_launcher"
                                />
                            <ImageView
                                android:id="@+id/item_senior_content_img4"
                                android:layout_width="0dp"
                                android:layout_height="170dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:layout_marginLeft="5dp"
                                android:src="@mipmap/ic_launcher"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout> <!--end 下面 -->
</LinearLayout>
