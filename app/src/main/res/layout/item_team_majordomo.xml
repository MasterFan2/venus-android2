<?xml version="1.0" encoding="utf-8"?>
<!-- 总监 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_team_majordomo_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <com.tool.widget.CircleImageView
                android:id="@+id/team_majordomo_photo_head_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/team_majordomo_photo_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            >
            <com.tool.widget.CircleImageView
                android:id="@+id/team_majordomo_stylist_head_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_toRightOf="@id/team_majordomo_photo_head_img"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/team_majordomo_stylist_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="李四"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/team_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="6"
                android:text="张大三张大三张大三团队"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/team_detail_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_border_bg"
                android:textColor="@color/red_border_color"
                android:text="查看详情"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>