<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/item_simple_head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/item_simple_pic_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>
        <!-- end Head -->
        <RelativeLayout
            android:id="@+id/item_simple_footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_simple_head_layout"
            android:background="@color/base_white_color"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/item_simple_name_2_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/title_text_color"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/item_simple_styles_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="风格:-"
                android:textColor="@color/subtitle_text_color"
                android:textSize="14sp"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_simple_headimg_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_simple_footer_layout"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-40dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item_simple_photographer_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.tool.widget.CircleImageView
                    android:id="@+id/item_simple_photographer_head_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:border_color="@android:color/white"
                    app:border_width="2dp"/>

                <TextView
                    android:id="@+id/item_simple_photographer_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="摄影师"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/item_simple_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@id/item_simple_styles_txt"
                android:gravity="left"
                android:text="黑白情节"
                android:textColor="@color/title_text_color"
                android:textSize="16sp"/>
        </LinearLayout>
        <!-- end 摄影师化妆师 -->
    </RelativeLayout>
</android.support.v7.widget.CardView>

