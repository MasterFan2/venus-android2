<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/works_detail_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            />
        <com.tool.widget.MasterTitleView
            android:id="@+id/titleView"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleBackgroundColor="@color/gray_900"
            app:rightButtonHide="true"
            app:titleText="查看大图"
            app:titleTxtColor="@android:color/white" />
        <RelativeLayout
            android:id="@+id/works_detail_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp">

            <TextView
                android:id="@+id/works_detail_digit_indicator_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="0/0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_24" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
