<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/item_simple_head_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_plan_simple_pic_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>
        <!-- end Head -->
        <RelativeLayout
            android:id="@+id/item_simple_footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_simple_head_layout"
            android:background="@color/base_white_color"
            android:gravity="center_vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/item_plan_simple_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="--"
                android:textColor="@color/gray_800"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/item_plan_simple_style_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="风格:-"
                android:textColor="@color/gray_500"
                android:textSize="16sp"/>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>

