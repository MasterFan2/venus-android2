<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_100"
    android:orientation="vertical"
    >
    <com.tool.widget.MasterTitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:titleBackgroundColor="@color/gray_900"
        app:titleText="案例详情"
        app:rightButtonHide="true"
        app:titleTxtColor="@android:color/white" />
    <com.tool.widget.mt_listview.MyListView
        android:id="@+id/myListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@android:color/transparent"
        app:header_layout="@layout/xlistview_header"
        android:padding="8dp"
        />
</LinearLayout>
